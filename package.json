{
  "name": "@clubmed/root",
  "version": "1.22.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "author": "Lenzotti Romain",
  "license": "ISC",
  "type": "module",
  "repository": {
    "url": "https://github.com/ClubMediterranee/swagger.git"
  },
  "scripts": {
    "build:swagger:v3": "nx build @clubmed/swagger-ui-v3",
    "build:swagger:standalone:v3": "nx build @clubmed/swagger-ui-standalone-v3",
    "build:feature-and-fix": "nx build @clubmed/feature-and-fix-v2",
    "build:storybook": "nx storybook:build @clubmed/storybook",
    "test": "vitest run",
    "test:storybook": "nx storybook:test:ci @clubmed/storybook",
    "test:ci": "nx run-many --target=test:ci --all",
    "lint": "eslint 'packages/**/*.{ts,js,tsx,jsx}'",
    "lint:fix": "eslint 'packages/**/*.{ts,js,tsx,jsx}' --fix",
    "release": "cmrelease",
    "release:dryrun": "cmrelease --dry-run",
    "prepare": "is-ci || husky install"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "nx": "18.3.5"
  },
  "devDependencies": {
    "@clubmed/trident-ui": "1.0.0-beta.18",
    "@cmflow/cli": "1.0.12",
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@storybook/test-runner": "^0.19.0",
    "@testing-library/dom": "9.3.4",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "14.3.1",
    "@testing-library/user-event": "14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.19.39",
    "@typescript-eslint/parser": "7.15.0",
    "@vitejs/plugin-react": "4.3.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-simple-import-sort": "12.1.0",
    "eslint-plugin-tailwindcss": "3.17.4",
    "eslint-plugin-vitest": "0.4.1",
    "eslint-plugin-workspaces": "0.10.1",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.3.0",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "semantic-release": "23.1.1",
    "ts-node": "^10.9.2",
    "typescript": "5.5.3",
    "vite": "5.3.2",
    "vitest": "1.6.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "@storybook/csf": "0.1.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{css,json,md,yml,yaml}": "prettier --write"
  },
  "flow": {
    "branch": {
      "develop": "main",
      "production": "main"
    },
    "bumpMethod": "cmflow"
  },
  "packageManager": "yarn@4.1.1"
}
