{
  "name": "@clubmed/root",
  "version": "1.13.5",
  "description": "",
  "author": "Digital API Team",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/ClubMediterranee/swagger.git"
  },
  "bugs": {
    "url": "https://github.com/ClubMediterranee/swagger/issues"
  },
  "homepage": "https://github.com/ClubMediterranee/swagger#readme",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/shortid/**",
      "**/striptags/**",
      "**/brace/**",
      "**/classnames/**",
      "**/jsoneditor/**",
      "**/jsoneditor-react/**",
      "**/lucene-filter/**",
      "**/lucene-query-parser/**",
      "**/moment/**",
      "**/normalize.css/**",
      "**/prop-types/**",
      "**/react-app-polyfill/**",
      "**/react-copy-to-clipboard/**",
      "**/react-dom/**",
      "**/swagger-ui-reac/**",
      "**/babel-eslint/**"
    ]
  },
  "engine-strict": true,
  "engines": {
    "node": "12.16.1"
  },
  "scripts": {
    "build": "yarn build:features && yarn build:swagger",
    "build:swagger": "cross-env PUBLIC_URL=${BASE_URL}/swagger-ui lerna run build --stream --scope @clubmed/swagger-ui",
    "build:features": "lerna run build --stream --scope @clubmed/features-and-fix",
    "start:swagger": "lerna run start --stream --no-prefix --scope @clubmed/swagger-ui",
    "start:features": "lerna run start --stream --no-prefix --scope @clubmed/features-and-fix",
    "start:tailwind": "lerna run start --stream --no-prefix --scope @clubmed/tailwind",
    "test": "cross-env CI=true lerna run test --concurrency 2 -- --passWithNoTests",
    "test:ci": "cross-env CI=true lerna run test:ci --concurrency 2 -- --passWithNoTests",
    "lint:fix": "lerna run lint:fix --parallel",
    "lint:ci": "cross-env NODE_ENV=travis CI=true lerna run lint:ci --parallel",
    "lint": "cross-env NODE_ENV=travis CI=true lerna run lint --parallel",
    "start:prod": "serve",
    "release": "cmrelease",
    "release:dryrun": "cmrelease --dry-run"
  },
  "dependencies": {
    "@clubmed/components": "1.13.5",
    "lerna": "3.15.0"
  },
  "devDependencies": {
    "cross-env": "5.2.0",
    "eslint": "7.15.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-config-standard": "16.0.2",
    "eslint-import-resolver-lerna": "2.0.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-flowtype": "5.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-mocha": "8.0.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-should-promised": "2.0.0",
    "eslint-plugin-standard": "5.0.0",
    "fs-extra": "9.0.1",
    "husky": "4.3.5",
    "jest-junit": "12.0.0",
    "junit": "^1.4.9",
    "lint-staged": "10.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint:fix",
      "git add"
    ]
  }
}
