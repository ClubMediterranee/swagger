{
  "name": "@clubmed/root",
  "version": "1.15.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "author": "Lenzotti Romain",
  "license": "ISC",
  "repository": {
    "url": "https://github.com/ClubMediterranee/swagger.git"
  },
  "scripts": {
    "build": "yarn build:swagger:v3",
    "build:swagger:v3": "nx build @clubmed/swagger-ui-v3",
    "test": "nx run-many --target=test --all",
    "test:ci": "nx run-many --target=test:ci --all",
    "lint": "eslint 'packages/**/*.{ts,js}'",
    "lint:fix": "eslint 'packages/**/*.{ts,js}' --fix",
    "release": "cmrelease",
    "release:dryrun": "cmrelease --dry-run",
    "prepare": "is-ci || husky install"
  },
  "dependencies": {
    "nx": "18.0.8"
  },
  "devDependencies": {
    "@clubmed/trident-ui": "1.0.0-alpha.27",
    "@cmflow/cli": "1.0.9",
    "@commitlint/cli": "19.2.0",
    "@commitlint/config-conventional": "19.1.0",
    "@storybook/test-runner": "^0.10.0",
    "@testing-library/dom": "9.3.3",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.5.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^18.15.11",
    "@typescript-eslint/parser": "7.2.0",
    "@vitejs/plugin-react": "4.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-simple-import-sort": "12.0.0",
    "eslint-plugin-tailwindcss": "3.15.1",
    "eslint-plugin-vitest": "0.3.26",
    "eslint-plugin-workspaces": "0.10.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.0",
    "semantic-release": "23.0.3",
    "ts-node": "^10.9.1",
    "typescript": "5.4.2",
    "vite": "5.1.6",
    "vitest": "1.3.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx,js,jsx}": "eslint --fix",
    "**/*.{css,json,md,yml,yaml}": "prettier --write"
  },
  "flow": {
    "branch": {
      "develop": "release-v3",
      "production": "release-v3"
    },
    "bumpMethod": "cmflow"
  },
  "packageManager": "yarn@4.1.1"
}
